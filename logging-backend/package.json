{
  "name": "sample-logging-backend",
  "version": "1.2.0",
  "description": "Sample backend for QA automation challenge (final)",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "seed": "node seed.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "ENABLE_WORKER_FOR_TESTS=true RATE_LIMIT=500 jest --testPathIgnorePatterns=async-worker --coverage && ENABLE_WORKER_FOR_TESTS=true jest --testPathPatterns=async-worker --runInBand --forceExit",
    "test:unit": "jest --testPathPatterns=unit",
    "test:integration": "jest --testPathPatterns=integration --testPathIgnorePatterns=async-worker && ENABLE_WORKER_FOR_TESTS=true jest --testPathPatterns=async-worker --runInBand --forceExit",
    "test:security": "ENABLE_WORKER_FOR_TESTS=true RATE_LIMIT=500 jest --testPathPatterns=security --runInBand --forceExit",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:ci": "jest --ci --coverage --forceExit",
    "test:e2e": "npm run test:e2e:local",
    "test:e2e:local": "ENABLE_WORKER_FOR_TESTS=true jest --testPathPatterns=e2e/local --runInBand --forceExit",
    "test:e2e:remote": "jest --testPathPatterns=e2e/remote --runInBand --forceExit",
    "perf": "npm run perf:local",
    "perf:local": "artillery run ../perf/artillery-local.yml -o ../perf/reports/local/report.json",
    "perf:remote": "artillery run ../perf/artillery-remote.yml -o ../perf/reports/remote/report.json",
    "perf:report": "node ../scripts/perf-report.js"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "express": "^4.19.2",
    "express-rate-limit": "^7.3.0",
    "jsonwebtoken": "^9.0.2",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "artillery": "^2.0.27",
    "eslint": "^9.39.2",
    "jest": "^30.2.0",
    "jest-mock-extended": "^4.0.0",
    "supertest": "^7.2.2"
  }
}
